<div class="no-container-margins">
  <h2>Listing Videos</h2>

  <table class="table highlight responsive-table table-fixed">
    <thead>
      <tr>
        <th width="10%">User</th>
        <th width="20%">Name</th>
        <th width="20%">URL</th>
        <th width="40%">Description</th>
        <th width="10%">Action</th>
      </tr>
    </thead>
    <tbody>
  <%= for video <- @videos do %>
      <tr class="cell-word-wrap">
        <td><%= video.user_id %></td>
        <td><%= video.name %></td>
        <td><%= video.url %></td>
        <td><%= video.description %></td>
        <td class="highlight">
          <%= link to: watch_path(@conn, :show, video), class: "btn btn-default btn-xs" do %>
            <i class="material-icons">remove_red_eye</i>
          <% end %>
          <%= link to: video_path(@conn, :edit, video), class: "btn btn-default btn-xs" do %>
            <i class="material-icons">mode_edit</i>
          <% end %>
          <%= link to: video_path(@conn, :delete, video), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" do %>
            <i class="material-icons">mode_edit</i>
          <% end %>
        </td>

      </tr>
  <% end %>
    </tbody>
  </table>

  <%= link "New video", to: video_path(@conn, :new) %>
</div>
